{
  "name": "byblos-backend",
  "version": "1.0.0",
  "description": "Backend for Byblos Atelier Vogue",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon -r dotenv/config src/index.js",
    "build": "npm install && npm run migrate",
    "migrate": "node -r dotenv/config scripts/migrate.js",
    "migrate:create": "node-pg-migrate create",
    "migrate:pesapal-v2": "node -r dotenv/config scripts/run-pesapal-v2-migration.js",
    "seed": "node --experimental-json-modules -r dotenv/config scripts/seed-db.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write \"**/*.{js,ts,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/byblos-atelier-vogue.git"
  },
  "keywords": [
    "ecommerce",
    "fashion",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/byblos-atelier-vogue/issues"
  },
  "homepage": "https://github.com/yourusername/byblos-atelier-vogue#readme",
  "dependencies": {
    "@types/joi": "^17.2.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.1.1",
    "chai": "^5.2.0",
    "cloudinary": "^1.41.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "intasend-node": "^1.1.2",
    "joi": "^17.13.3",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lucide-react": "^0.526.0",
    "mocha": "^11.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "^7.0.3",
    "nodemailer-smtp-transport": "^2.7.4",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.34.1",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended"
    ],
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignorePatterns": [
      "dist",
      "node_modules"
    ]
  }
}
